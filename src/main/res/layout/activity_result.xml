<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_average"
    tools:context="com.example.cez.gradescalculator.ShowAverage"

    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/finalandroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/finaljava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/finalxml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/finaloop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:text="">
         </TextView>

    </TableRow>
</TableLayout>

        <TextView
            android:id="@+id/finalaverage"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:text="">
        </TextView>



</LinearLayout>